
.wrapper
  font-family: 'Open Sans', sans-serif;

// left-part

.exercice-left
    width: 50%
    position: fixed
    height: 100vh
    border-right: 1px solid black
    color: white

.exercice-left, p
  padding: 1%
  font-size: 1.2em

.left-title
    text-transform: uppercase
    font-weight: bold
    border: 1px solid #000
    box-shadow: inset 0px 0px 29px -2px rgba(0,0,0,0.75)
    padding: 0.4em

.description
    line-height: 1.125em

.textarea
  resize: none
  line-height: 1.5em
  font-size: 1em
  border: 1px solid #333333
  background-color: #333333
  color: #fcbd75
  max-width: 90%
  margin-left: 1.5em

.textarea:focus, select:focus
  outline: none
  border: 1px solid grey

.code-editor
  display: flex
  background-color:#333333
  max-width: 100%

.exercice-form
  max-width:100%
  
.code-content
  font-size: 1.1em
  

// right-part

.Header-right
    height 22%

.exercice-right
    position: fixed
    width: 50%
    margin-left: 50%
    height: 100vh
    background-color: white
    border-left: 1px solid black
    display: flex
    flex-direction: column
    justify-content: space-between

.title-message
    background-color: lightgray
    font-size: 1.5em
    text-transform: uppercase
    text-decoration: underline
    font-weight: bold
    text-align: center
    padding-top: 1.5em
    padding-bottom: 1.5em
    box-shadow: 0px 10px 30px -8px rgba(0,0,0,0.75)
    margin-bottom: 1em

.rendu-exercice
    margin-top: 5em
    margin-left: 5em

.title-exe
    text-transform: uppercase
    font-size: 2em

.subtitle-ex
    margin-top: 1em
    margin-bottom: 1em
    font-size: 1.5em

.ul-e4
    list-style-type: disc

//buttons
.arrow-ex
  margin-top: 1em
  display: flex
  justify-content: space-between
