
.wrapper
  font-family: 'Josefin Sans', sans-serif;

// left-part

.description-code
  display: inline-block
  color:#fbab50

.exercice-left
  width: 50%
  position: fixed
  text-align: center  
  font-size: 1em
  height: 100vh
  overflow-y: scroll
  background-color:#1995AD
  color: white
  font-family: 'Josefin Sans', sans-serif;

.exercice-george
  width: 200px
  margin-bottom: 10px

.exercice-state h1 
	text-transform: uppercase
	font-style: bold
	border: 1px solid black
	box-shadow: inset 0px 0px 29px -2px rgba(0,0,0,0.75)
	padding:0.4em

.exercice-state p
  line-height: 1.2em
  font-size: 1.3em
  color: white

.textarea
  line-height: 1.5em
  font-size: 1em
  border: 1px solid #333333
  background-color: #333333
  color: #fcbd75
  width:90%
  margin-left: 1.5em

.exercice-form
  width: 100%

.textarea-ex-1:focus, select:focus
  outline: none
  border: 1px solid grey

.code-editor
  display: flex
  background-color:#333333
  width: 100%
  
.code-content-ex
  font-size: 1.1em
  width: 90%

.btn
  display:flex
  margin: 5px

.arrow-ex
  margin-top: 1em
  display: flex
  justify-content: space-between

.btn-success-pop
  margin: auto

.inactive-success-pop
  color: white

.alert-success
  margin-bottom:1em

// right-part

.exercice-right
    position: fixed
    width: 50%
    margin-left: 50%
    height: 100vh
    background-color: white
    border-left: 1px solid black
    display: flex
    flex-direction: column
    justify-content: space-between

.rendu-exercice
    margin-top: 5em
    margin-left: 5em

.hljs-symbol
  color: #fcbd75