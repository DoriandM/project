

.wrapper
  font-family: 'Josefin Sans', sans-serif;

// left-part
.badge1
  width: 50%
  font-size: 2.2em
  margin-bottom: 1em
  background-color: #333333
  font-family: 'Acme', sans-serif
  color: white

.lesson-george
  width: 200px
  margin-bottom: 10px

.lesson-left 
    width: 50%
    position: fixed
    text-align: center  
    font-size: 1em
    height: 100vh
    overflow-y: scroll
    background-color:#1995AD
    color: white
    font-family: 'Josefin Sans', sans-serif;

.george-dial h1
	text-transform: uppercase
	font-weight: bold
	border: 1px solid black
	box-shadow: inset 0px 0px 29px -2px rgba(0,0,0,0.75)
	padding:0.4em


.lesson-left h2
  font-size: 1.5em
	text-transform: uppercase
	border: 1px solid black
	box-shadow: inset 0px 0px 29px -2px rgba(0,0,0,0.75)
	padding:0.4em

.lesson-left p
    line-height: 1.2em
    font-size: 1.3em
    color: white
    
.lesson-left, p
  padding: 1%

.balises
  margin-bottom: 0.5em
  padding-top: 0.5em
  padding-bottom: 0.5em
  text-align: left
  width: 100%

// right-part

.right-side
  position: fixed
  width: 50%
  margin-left: 50%
  font-family: "Play", sans-serif
  background-color: white
  color: black
  height: 100%

.main-title
  text-align: center
  font-size: 3em
  margin-top: 4%

.second-title
  text-align: center
  font-size: 2em
  margin-top: 2%

.header
  border: 2px #d3d3d3 solid
  box-shadow: 3px 7px 42px 0px rgba(0,0,0,0.75)
  height 25%
  background-color: lightgrey

.header-p 
  text-align: center

.content
  margin-top: 15%
  display: flex
  padding 5%

.div 
  text-align: center
  font-size: 1.5em
   

.footer
  position: fixed
  bottom: 0
  left: 50%
  width: 50%
  height: 7%
  background-color: lightgrey
  text-align: center
  padding-top: 1.2em
  box-shadow: inset 10px 10px 63px -24px rgba(0,0,0,0.75)


.p 
  font-weight: bold

.inactive
    color: white

.arrow
  margin-left: 40%